<%- include ("../partials/header") %>

<div class="container">
	
	<h1 id="center">Editing <%= user.username %></h1>
	
	<div class="container" id="formCenter">

		<form action="/users/<%= user._id %>" method="POST">
			<div class="form-group">
				<label for="user[firstName]">First Name</label>
				<input class="form-control" type="text" value="<%= user.firstName %>" name="user[firstName]">
			</div>
			<div class="form-group">
				<label for="user[lastName]">Last Name</label>
				<input class="form-control" type="text" value="<%= user.lastName %>" name="user[lastName]">
			</div>
			<div class="form-group">
				<label for="user[avatar]">Image Url</label>
				<input class="form-control" type="text" value="<%= user.avatar %>" name="user[avatar]">
			</div>
			<div class="form-group">
				<label for="user[description]">Tell us a bit about yourself</label>
				<textarea class="form-control" type="text" name="user[description]"><%= user.description %></textarea>
			</div>
			<div class="form-group">
				<label for="user[email]">Email</label>
				<input class="form-control" type="email" value="<%= user.email %>" name="user[email]">
			</div>

			<button class="full btn btn-success">Submit</button>
		</form>
	
	</div>
</div>


<%- include ("../partials/footer") %>