<%- include ("../partials/header") %>

<div class="container-fluid">

	<div id="showThumbnail" class="thumbnail">
		<img src="<%= shelter.avatar %>">
		<div class="caption">
			<h3><%= shelter.name %></h3>
			<p><%= shelter.address %></p>
			<p><%= shelter.description %></p>
			<p><%= shelter.schedule %></p>
			<p><%= shelter.email %></p>
			<p><%= shelter.phoneNumber %></p>
			<p><%= shelter.websiteUrl %></p>
		</div>
		<div class="alert alert-warning pull-right" role="alert">WARNING: Please note that if you press the 'Delete Account' button, you will delete this account, this shelter page, all the dogs, comments and reviews associated. Please be sure of what you want before taking this action.</div>
		
		<button class="btn btn-success btn-lg">
			<a id="editButtonAnchor" href="/shelters/<%= shelter._id %>/dogs/new">Add Dog</a>
		</button>
		
		<button class="btn btn-warning btn-lg">
			<a id="editButtonAnchor" href="/shelters/<%= shelter._id %>/edit">Edit</a>
		</button>
		
		<form class="pull-right" id="inline" action="/shelters/<%= shelter._id %>/delete" method="POST">
			<button id="deleteAccount" class="btn btn-danger btn-lg" data-toggle="tooltip" data-placement="top" title="WARNING: Please note that if you press this button, you will delete this account, this shelter page and all the dogs, comments and reviews associated. Please be sure of what you want before taking this action.">Delete Account</button>
		</form>
		
	</div>
</div>


<%- include ("../partials/footer") %>