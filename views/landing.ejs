    <div class="container">
        <% if(error && error.length > 0){ %>
            <div class="alert alert-danger" role="alert">
                <%= error %>
            </div>
        <% } %>
        <% if(success && success.length > 0){ %>
            <div class="alert alert-success" role="alert">
                <%= success %>
            </div>
        <% } %>
    </div>
    
    <div id="landing-header">
 		<h1><i class="fas fa-paw"></i> Welcome to Purrfect Match!</h1>
		<p id="white">Where you can find your best buddy anywhere in the world!</p>
		<a class="btn btn-md btn-primary" href="/shelters">Search Shelters</a>
		<a class="btn btn-md btn-success" href="/dogs">Search Dogs</a>
		<a class="btn btn-md btn-warning" href="/register">Join Our Community!</a>
    </div>
    
