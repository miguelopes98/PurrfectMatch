<%- include ("../partials/header") %>

<div class="container-fluid">
	
	
	<div class="block text-center" id="margin">
		<h1 class="inline">Your Messages</h1>
	</div>
	
	<div class="container-fluid">
		<div class="border">
			<h4 class="inline">
				<%= recipient.username %>
			</h4>
			<form action="/users/<%= user._id %>/messages/<%= recipient._id %>" method="POST">
				<textarea name="message[text]" placeholder="Send something to <%= recipient.username %>..."></textarea>
				<button class="btn btn-md btn-primary">
					<i class="fas fa-reply"></i>
				</button>
			</form>
			<% if(index !== undefined){ %>
			<div>
				<% for(var i = user.conversations[index].messages.length - 1; i >= 0 ; i--){ %>
					<p class="
						<% if(user.conversations[index].messages[i].sender.id.equals(currentUser._id)){ %>
							  blue
						<% } %>
						">
						<%= user.conversations[index].messages[i].text %>
					</p>
				<% } %>
			</div>
			<% } %>
		</div>
		<hr>
	</div>
</div>


<%- include ("../partials/footer") %>