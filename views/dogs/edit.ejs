<%- include ("../partials/header") %>

<div class="container">
	
	<h1 id="center">Editing <%= dog.name %></h1>
	
	<div class="container" id="formCenter">

		<form action="/shelters/<%= shelter._id %>/dogs/<%= dog._id %>" method="POST">
			<div class="form-group">
				<label for="dog[name]">Name</label>
				<input class="form-control" type="text" value="<%= dog.name %>" name="dog[name]" required>
			</div>
			<div class="form-group">
				<label for="dog[avatar]">Dog's Picture Url</label>
				<input class="form-control" type="text" value="<%= dog.avatar %>" name="dog[avatar]" required>
			</div>
			<div class="form-group">
				<label for="dog[breed]">Breed</label>
				<input class="form-control" type="text" value="<%= dog.breed %>" name="dog[breed]" required>
			</div>
			<div class="form-group">
				<label for="dog[age]">Age</label>
				<input class="form-control" type="text" name="dog[age]" value="<%= dog.age %>" required>
			</div>
			<div class="form-group">
				<label for="dog[gender]">Gender</label>
				<input class="form-control" type="text" value="<%= dog.gender %>" name="dog[gender]" required>
			</div>
			<div class="form-group">
				<label for="dog[temperament]">Temperament</label>
				<!-- I WANT A DROPDOWN MENU WITH THREE EMOJIS FOR TEMPERAMENT AND WITH THE TEMPERAMENT PICKED IN THE DROPDOWN MENU -->
				<input class="form-control" type="text" placeholder="DROPDOWN MENU TEMPERAMENT" name="dog[temperament]" required>
			</div>
			<div class="form-group">
				<label for="dog[medicalConditions]">Medical Conditions</label>
				<textarea class="form-control" value="<%= dog.medicalConditions %>" name="dog[medicalConditions]" required></textarea>
			</div>
			<div class="form-group">
				<label for="dog[personality]">Personality</label>
				<textarea class="form-control" value="<%= dog.personality %>" name="dog[personality]" required></textarea>
			</div>

			<button class="full btn btn-success">Create Dog</button>
		</form>
	
	</div>
</div>

<%- include ("../partials/footer") %>