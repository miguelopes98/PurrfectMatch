<%- include ("../partials/header") %>

<h1>Shows form to edit a dog</h1>

<!-- have to change the action url later -->
<form action="/shelters/:id/dogs/:dogId" method="POST">
	<button>Submit</button>
</form>

<div class="container">
	
	<h1 id="center">Adding dog to <%= shelter.name %></h1>
	
	<div class="container" id="formCenter">

		<form action="/shelters/<%= shelter._id %>/dogs/" method="POST">
			<div class="form-group">
				<label for="dog[name]">Name</label>
				<input class="form-control" type="text" placeholder="Name" name="dog[name]" required>
			</div>
			<div class="form-group">
				<label for="dog[avatar]">Dog's Picture Url</label>
				<input class="form-control" type="text" placeholder="Dog's Picture Url" name="dog[avatar]" required>
			</div>
			<div class="form-group">
				<label for="dog[breed]">Breed</label>
				<input class="form-control" type="text" placeholder="Breed" name="dog[breed]" required>
			</div>
			<div class="form-group">
				<label for="dog[age]">Age</label>
				<input class="form-control" type="text" name="dog[age]" placeholder="Age" required>
			</div>
			<div class="form-group">
				<label for="dog[gender]">Gender</label>
				<input class="form-control" type="text" placeholder="Male/Female" name="dog[gender]" required>
			</div>
			<div class="form-group">
				<label for="dog[temperament]">Temperament</label>
				<!-- I WANT A DROPDOWN MENU WITH THREE EMOJIS FOR TEMPERAMENT -->
				<input class="form-control" type="text" placeholder="DROPDOWN MENU TEMPERAMENT" name="dog[temperament]" required>
			</div>
			<div class="form-group">
				<label for="dog[medicalConditions]">Medical Conditions</label>
				<textarea class="form-control" placeholder="Describe some worth mentioning medical conditions of the dog..." name="dog[medicalConditions]" required></textarea>
			</div>
			<div class="form-group">
				<label for="dog[personality]">Personality</label>
				<textarea class="form-control" placeholder="Describe if the dog is friendly, picky with people..." name="dog[personality]" required></textarea>
			</div>

			<button class="full btn btn-success">Create Dog</button>
		</form>
	
	</div>
</div>

<%- include ("../partials/footer") %>