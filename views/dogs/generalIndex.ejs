<%- include ("../partials/header") %>

<div class="container">
	
	<!--HEADER-->
	<header class="jumbotron">
		<div class="container">
			<h1>Welcome to Purrfect Match</h1>
			<p>Where you can find your best buddy anywhere in the world!</p>
		</div>
	</header>
	
	<!--PRINTING SHELTERS-->
	<div id="indexGrid" class="row text-center">
		<% for(var i = 0; i < dogs.length; i++){ %>
		<div class="col-md-3 col-sm-6">
			<div class="thumbnail">
				<img src="<%= dogs[i].avatar %>">
				<div class="caption">
					<h4><%= dogs[i].name %> </h4>
				</div>
				<p>
					<a class="btn btn-primary" href="/shelters/<%= dogs[i].author.id %>/dogs/<%= dogs[i]._id %>">See More</a>
				</p>
			</div>
		</div>
		<% } %>
	</div>

</div>

<%- include ("../partials/footer") %>